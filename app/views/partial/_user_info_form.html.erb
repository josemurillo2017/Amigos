<%= simple_form_for @member_info, as: 'user_basic',
  wrapper_mappings: {
    check_boxes: :vertical_radio_and_checkboxes,
    radio_buttons: :vertical_radio_and_checkboxes,
    file: :vertical_file_input,
    boolean: :vertical_boolean
  } do |f| %>

  <%= f.input :email, placeholder: 'Enter email' %>

  <%= f.input :password, placeholder: 'Password' %>

  <%= f.input :file, as: :file %>

  <%= f.input :active %>

  <%= f.input :choices, as: :check_boxes,
    collection: [
      'Option one is this and thatâ€”be sure to include why it\'s great',
      'Option two can be something else and selecting it will deselect option one'] %>

  <%= f.input :sex, as: :radio_buttons,
    collection: ['Male', 'Female'] %>

  <%= f.button :submit %>
<% end %>



<div class="col">
  <h1 class="text-center"><%= @member.first_name %>'s Info</h1>
  <%=  simple_form_for(@member, html: { class: 'form-inline' }) do |form|%>
  <%= label_tag(:sat_math_score, "SAT Math Score") %>
  <%= number_field_tag(:sat_math_score, value=800, in: 200..800, step: 0.5) %>
  <%= submit_tag("Search") %>
  <% end %>

  <form>
    <h2> Personal Information</h2>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="sat_math_score">First Name</label>
        <input type="number" min="0" max="800" step="1" class="form-control" id="sat_math_score">
      </div>
    </div>

    <% grade = @member.grade
    if grade >9 %>

    <h2>College Going Info</h2>
    <div class="form-row">
      <div class="form-group col-md-6">


      </div>

      <div class="form-group col-md-6">
        <label for="sat_reading_score">SAT Reading Score</label>
        <input type="number" min="0" max="800" step="1" class="form-control" id="sat_reading_score">
      </div>

      <div class="form-group col-md-6">
        <label for="act_score">ACT Composite Score</label>
        <input type="number" min="0" max="36" step="1" class="form-control" id="act_score">
      </div>


    </div>
    <% end %>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>


</div>
